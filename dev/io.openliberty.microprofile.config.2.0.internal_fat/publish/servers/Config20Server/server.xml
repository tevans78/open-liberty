<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<server description="Server for testing MP Config 2.0">
    <featureManager>
        <feature>componenttest-1.0</feature>
        <feature>mpConfig-2.0</feature>
        <feature>servlet-4.0</feature>
        <feature>osgiconsole-1.0</feature>
        <feature>cdi-2.0</feature>
    </featureManager>
    <include location="../fatTestPorts.xml"/>
    
    <variable name="keyFromVariableInServerXML" value="${KeyFromMicroprofileConfigProperties}" />
    
    <webApplication location="propertyExpressionApp.war">
        <appProperties>
            <property name="keyFromAppPropertyInServerXML"
                value="${KeyFromMicroprofileConfigProperties}" />
        </appProperties>
    </webApplication>

    <variable name="keyFromServerXML"
        value="${KeyDefinedIn2Places}" />
    
</server>
